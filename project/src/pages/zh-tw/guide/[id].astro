---
import {
  type GuideItem,
  type Language,
  getLocalizedText,
  t
} from '../../../utils/language';
import { fetchGuideData } from '../../../utils/dataFetcher';
import LanguageSelector from '../../../components/LanguageSelector.astro';
import Layout from '../../../layouts/Layout.astro';
import { generateBreadcrumbSchema, generateWebPageSchema, generateTouristAttractionSchema, generateHreflangTags } from '../../../utils/structuredData';

export async function getStaticPaths() {
  try {
    const guideItems = await fetchGuideData();
    
    const paths = [];
    
    for (const item of guideItems) {
      if (item && item.item_id) {
        paths.push({
          params: { id: item.item_id },
          props: { guideData: item }
        });
      }
    }
    
    return paths;
  } catch (error) {
    console.error('Error in getStaticPaths:', error);
    return [];
  }
}

const { guideData } = Astro.props;
const currentLanguage: Language = 'zh-tw';

const homeText = t('home', currentLanguage);
const overviewText = t('overview', currentLanguage);
const detailInfoText = t('detailInfo', currentLanguage);
const viewOtherSpotsText = t('viewOtherSpots', currentLanguage);

const pageTitle = guideData.meta_title_zh_tw || getLocalizedText(guideData, 'name_ja', currentLanguage);
const pageDescription = guideData.meta_description_zh_tw || getLocalizedText(guideData, 'summary_ja', currentLanguage);
const ogImage = guideData.main_image_url;
const baseUrl = 'https://mop-okinawa.com';
const ogUrl = `${baseUrl}/zh/guidebook/${guideData.item_id}/`;

const appURL = 'https://mop-okinawa.com/';
const spotDeepLinkURL = `https://mop-okinawa.com/?pin_id=${guideData.pin_id}&lang=zh-tw`;

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: 'È¶ñÈ†Å', url: `${baseUrl}/zh/guidebook/` },
  { name: getLocalizedText(guideData, 'name_ja', currentLanguage), url: ogUrl }
]);

const webPageSchema = generateWebPageSchema(
  pageTitle,
  pageDescription,
  ogUrl,
  ogImage,
  'zh'
);

const touristAttractionSchema = generateTouristAttractionSchema(
  guideData,
  'zh-tw',
  ogUrl
);

const hreflangLinks = generateHreflangTags(
  `${baseUrl}/en/guidebook/${guideData.item_id}/`,
  `${baseUrl}/zh/guidebook/${guideData.item_id}/`,
  ogUrl
);

const structuredData = [breadcrumbSchema, webPageSchema, touristAttractionSchema];
